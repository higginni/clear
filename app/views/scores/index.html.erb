<script>
$(document).ready(function(){
    $("p").hide();

    $("button").click(function(){
        $("p").show(600);
    });
});
</script>
<script>
$(document).ready(function(){
    $("scores").hide();

    $("button").click(function(){
        $("scores").show(600);
    });
});
</script>


