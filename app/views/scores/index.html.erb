
<div class="page-header">
  <center>
    <h2>Performance Analysis</h2>
  </center>       <!--  -->
</div>
  <div class ="container">
    <div class ="row"> 
        <div class="col-md-6">   
              <div class="table-responsive">
                <table class=" table condensed" style="width:70%">  <!-- add proper styling -->
                  <h3>Scores<small> Last 7</small></h3>
                  <thead>
                        <tr>
                          <th>Strokes:</th>
                          <th>Created on:</th>
                          
                          <th colspan="3"></th>
                        </tr>
                  </thead>

                  <tbody>
                    <% @scores.each do |score| %>
                      <tr>
                        <td><%= score.strokes %></td>
                        <!-- <td><%= score.course %></td> -->
                        <td><%= score.created_at.strftime("%d %b. %Y")%></td>
                      
                         <!-- glyphicon glyphicon-eye-open-->
                      <p>
                        <td><%= link_to '  ', score, :class => "btn btn-primary glyphicon glyphicon-eye-open" %></td>
                        <!-- <td><%= link_to '', edit_score_path(score), :class => "glyphicon glyphicon-pencil"%></td> -->
                        <td><%= link_to '  ', score, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary glyphicon glyphicon-trash"%></td>
                      </p>
                      </tr> 
                    <% end %>
                  </tbody>
                </table>
                
              </div>
              <%= link_to 'New Score', new_score_path(:user_id => current_user.id), :class => "btn btn-info" %>
        </div>
        <div class ="col-md-6">
         
            <h3>Stats</h3>
                 
                        
                         
                      
                       
                      
                          <p>    
                          <strong>Mean Value:</strong>          <!-- strokes unless @score.nil?       -->
                            <%= @avg %> 
                          <br>
                          <strong>Confidence Interval:</strong>
                            <!-- Confidence interval variable -->
                          <br>
                          <strong>Standard Deviation:</strong>
                            <!-- Standard Deviation variable -->
                            <br>
                          <strong>Sample Size:</strong>
                            <%= @sample %>
                            <br>
                            <strong>Variance</strong>
                            <%= @variance %>
                          </p>
                     <%= @john %>

                        
                  
                  <button class = "btn btn-default btn-sm">Generate Stats</button>
                  
                <br>
                
              
          
        </div>
    </div>
  </div>
<br>


