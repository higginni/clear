
<div class="page-header">
  <center>
    <h1>Performance Analysis</h1>
  </center>       <!--  -->
</div>
  <div class ="container">
    <div class ="row"> 
        <div class="col-md-6 ">   
              <div class="table-responsive ">
                <table class="table condensed" style="width:70%">  <!-- add proper styling -->
                   <div class="panel panel-info">
                            <div class="panel-heading">
                              <h3>Scores</h3>
                            </div>
                            
                            <div class="panel-body">
                               <h5><strong>See your last 3 scores below. Add a score by clicking 'new score', view and edit the details by clicking the buttons below. </strong>  </h5>
                            </div>
                                  
                                  <thead>
                                        <tr>
                                          <th>Strokes:</th>
                                          <th>Created on:</th>
                                          
                                          <th colspan="3"></th>
                                        </tr>
                                  </thead>

                                        <tbody>
                                          <% @scores.each do |score| %>
                                            <tr>
                                              <td><%= score.strokes %></td>
                                              <td><%= score.created_at.strftime("%d %b. %Y")%></td>
                                            <p>
                                              <td><%= link_to '  ', score, :class => "btn btn-primary glyphicon glyphicon-eye-open" %></td>
                                              <!-- <td><%= link_to '', edit_score_path(score), :class => "glyphicon glyphicon-pencil"%></td> -->
                                              <td><%= link_to '  ', score, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs glyphicon glyphicon-trash"%></td>
                                            </p>
                                            </tr> 
                                          <% end %>
                                        </tbody>
                            <!-- </div> -->

                  
                </div>
                

                </table>
                
              </div>
              <%= link_to 'New Score', new_score_path(:user_id => current_user.id), :class => "btn btn-info" %>
        </div>
       
        <div class ="col-md-6">                         
               <div class="panel panel-success">
                    <div class="panel-heading">
                    <h3>Stats</h3>
                    </div>
                    <div class="panel-body">
                           <h5><strong>Click the button below to have your statistics generated.</strong></h5>

                            <p>    
                          Mean Value:
                            <%= @avg %> 
                          <br>
                          Confidence Interval:
                            
                          <br>
                          Standard Deviation:
                            
                            <br>
                          Sample Size:
                            <%= @sample %>
                            <br>
                            Variance:
                            <%= @statsD %>
                          </p>    

                    </div>
                </div>
             <button class ="btn btn-success">View Stats</button>
                  
                <br>
          </div>       
                       
                      

                        
                  
                 
                
              
          
        </div>
    </div>
  </div>
<br>


