
<div class="page-header">
  <center>
    <h2>Performance Analysis</h2>
  </center>       <!--  -->
</div>
  <div class ="container">
    <div class ="row"> 
        <div class="col-md-6">   
              <div class="table-responsive">
                <table class=" table condensed" style="width:70%">  <!-- add proper styling -->
                  <h3>Scores<small> Last 7</small></h3>
                  <thead>
                        <tr>
                          <th>Strokes:</th>
                          <!-- <th>Course Type:</th> -->
                          <th>Created on:</th>
                          
                          <th colspan="3"></th>
                        </tr>
                  </thead>

                  <tbody>
                    <% @scores.each do |score| %>
                      <tr>
                        <td><%= score.strokes %></td>
                        <!-- <td><%= score.course %></td> -->
                        <td><%= score.created_at.strftime("%d %b. %Y")%></td>
                      
                         <!-- glyphicon glyphicon-eye-open-->
                      <p>
                        <td><%= link_to '  ', score, :class => "btn btn-primary glyphicon glyphicon-eye-open" %></td>
                        <!-- <td><%= link_to '', edit_score_path(score), :class => "glyphicon glyphicon-pencil"%></td> -->
                        <td><%= link_to '  ', score, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary glyphicon glyphicon-trash"%></td>
                      </p>
                      </tr> 
                    <% end %>
                  </tbody>
                </table>
                
              </div>
              <%= link_to 'New Score', new_score_path(:user_id => current_user.id), :class => "btn btn-info" %>
        </div>
        <div class ="col-md-6">
         
            <h3>Stats</h3>
                 
                        
                         
                      
                       
                      
                          <p>    
                          <strong>Mean Value:</strong>          <!-- strokes unless @score.nil?       -->
                            <%= @avg %> 
                          <br>
                          <strong>Confidence Interval:</strong>
                            <!-- Confidence interval variable -->
                          <br>
                          <strong>Standard Deviation:</strong>
                            <!-- Standard Deviation variable -->
                            <br>
                          <strong>Sample Size:</strong>
                            <%= @sample %>
                            <br>
                            <strong>Variance</strong>
                            <%= @variance %>
                          </p>
                     <%= @john %>

                        
                  
                  <button class = "btn btn-default btn-sm">Generate Stats</button>
                  
                <br>
                
              
          
        </div>
    </div>
  </div>
<br>


<!-- Statistical Analysis -->
<div class ="container">
    <div class ="row"> 
        <div class="col-md-6">
          <h3> Graph </h3>
             <!--Load the AJAX API-->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">

      // Load the Visualization API and the corechart package.
      google.charts.load('current', {'packages':['corechart']});

      // Set a callback to run when the Google Visualization API is loaded.
      google.charts.setOnLoadCallback(drawChart);

      // Callback that creates and populates a data table,
      // instantiates the pie chart, passes in the data and
      // draws it.
      function drawChart() {

        // Create the data table.
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Topping');
        data.addColumn('number', 'Slices');
        data.addRows([
          ['Mushrooms', 4],
          ['Onions', 2],
          ['Olives', 1],
          ['Zucchini', 5],
          ['Pepperoni', 2]
        ]);

        // Set chart options
        
        var options = {'title':'Scores over the last week',
                       'width':800,
                       'height':300};

        // Instantiate and draw our chart, passing in some options.
        var chart = new google.visualization.LineChart(document.getElementById('chart_div'));
        chart.draw(data, options);
      }
    </script>
  

  <body>
    <!--Div that will hold the pie chart-->
    <div id="chart_div"></div>
  </body>

        </div>
    </div>
</div>
 

