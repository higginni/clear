<div class="page-header">
  <center>
    <h2>Performance Analysis</h2>
  </center>       <!--  -->
</div>
  <div class ="container">
    <div class ="row"> 
        <div class="col-md-6">   
              <div class="table-responsive">
                <table class=" table table-hover" style="width:70%">  <!-- add proper styling -->
                  <h3>Scores</h3>
                  <thead>
                        <tr>
                          <th>Strokes:</th>
                          <th>Course:</th>
                          <th>Created on:</th>
                          <!-- <th>Created at:</th> -->
                          <th colspan="3"></th>
                        </tr>
                  </thead>

                  <!-- Rendering the Activity Name -->
                


                  <tbody>
                    <% @scores.each do |score| %>
                      <tr>
                        <td><%= score.strokes %></td>
                        <td><%= score.course %></td>
                        <td><%= score.created_at.strftime("%d %b. %Y")%></td>
                      
                         <!-- Make this appear on click of Alter scores button -->
                      <div class = "alter">
                        <td><%= link_to ' Show', score %></td>
                        <td><%= link_to '', edit_score_path(score), :class => "glyphicon glyphicon-pencil"%></td>
                        <td><%= link_to '', score, method: :delete, data: { confirm: 'Are you sure?' }, :class => "glyphicon glyphicon-trash"%></td>
                      </div>  
                      </tr> 
                    <% end %>
                  </tbody>
                </table>
                <%= link_to 'New Score', new_score_path(:user_id => current_user.id), :class => "btn btn-info" %>
                <button class = "btn btn-primary">Alter Stats</button>
                <!-- Have this button to make the show,edit and delete button appear onclick  -->
              </div>
        </div>
        <div class="col-md-6">
         
            <h3>Stats</h3>
                 
                  <strong>Average:</strong>
                  

              
              
          
        </div>
    </div>
  </div>
