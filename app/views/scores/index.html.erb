 <p id="notice"><%= notice %></p> 

<div class="page-header">
  <center>
    <h2>Stats</h2>
  </center>       <!--  -->
</div>
<div class="table-responsive">
  <table class=" table table-striped" style="width:70%">  <!-- add proper styling -->
    <thead>
      <tr>
        <th>Strokes</th>
        <th>Course </th>
        <th>Created on:</th>
        <!-- <th>Created at:</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @scores.each do |score| %>
        <tr>
          <td><%= score.strokes %></td>
          <td><%= score.course %></td>
          <td><%= score.created_at.strftime("%d %b. %Y")%></td>
          <!-- <td><%= score.created_at.strftime("%H:%M")%></td> -->
          <div>
            <td><%= link_to ' Show', score %></td>
            <td><%= link_to '', edit_score_path(score), :class => "glyphicon glyphicon-pencil"%></td>
            <td><%= link_to '', score, method: :delete, data: { confirm: 'Are you sure?' }, :class => "glyphicon glyphicon-trash"%></td>
          </div>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Score', new_score_path, :class => "btn btn-info" %>
<%= link_to 'Alter Stats', "#", :class => "btn btn-primary" %> <!-- Have this button to make the show,edit and delete button appear onclick  -->