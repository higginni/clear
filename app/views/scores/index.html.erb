
<div class="page-header">
  <center>
    <h2>Performance Analysis</h2>
  </center>       <!--  -->
</div>
  <div class ="container">
    <div class ="row"> 
        <div class="col-md-6">   
              <div class="table-responsive">
                <table class=" table condensed" style="width:70%">  <!-- add proper styling -->
                  <h3>Scores<small> Last 7</small></h3>
                  <thead>
                        <tr>
                          <th>Strokes:</th>
                          <!-- <th>Course Type:</th> -->
                          <th>Created on:</th>
                          
                          <th colspan="3"></th>
                        </tr>
                  </thead>

                  <tbody>
                    <% @scores.each do |score| %>
                      <tr>
                        <td><%= score.strokes %></td>
                        <!-- <td><%= score.course %></td> -->
                        <td><%= score.created_at.strftime("%d %b. %Y")%></td>
                      
                         <!-- Make this appear on click of Alter scores button -->
                      <p>
                        <td><%= link_to '', score, :class => "glyphicon glyphicon-eye-open" %></td>
                        <td><%= link_to '', edit_score_path(score), :class => "glyphicon glyphicon-pencil"%></td>
                        <td><%= link_to '', score, method: :delete, data: { confirm: 'Are you sure?' }, :class => "glyphicon glyphicon-trash"%></td>
                      </p>
                      </tr> 
                    <% end %>
                  </tbody>
                </table>
                
              </div>
              <%= link_to 'New Score', new_score_path(:user_id => current_user.id), :class => "btn btn-info" %>
        </div>
        <div class ="col-md-6">
         
            <h3>Stats</h3>
                 
                        
                         
                      
                       
                      
                          <p>    
                          <strong>Mean Value:</strong>          <!-- strokes unless @score.nil?       -->
                            <%= @avg.round %> 
                          <br>
                          <strong>Confidence Interval:</strong>
                            <!-- Confidence interval variable -->
                          <br>
                          <strong>Standard Deviation:</strong>
                            <!-- Standard Deviation variable -->
                          </p>
                     
                        
                  
                  <button class = "btn btn-default btn-sm">Generate Stats</button>
                  
                  

              
              
          
        </div>
    </div>
  </div>
<br>


<!-- Statistical Analysis -->
<div class ="container">
    <div class ="row"> 
        <div class="col-md-6">
          <h3> Graph </h3>
        
        </div>
    </div>
</div>
 


<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script>
$(document).ready(function(){
    $("p").hide();

    $("button").click(function(){
        $("p").show();
    });
});
</script>




