<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>




<div class="page-header">
  <center>
    <h1>Performance Analysis <small>View and add scores, statistics and graphs. </small></h1>
  </center>       <!--  -->
</div>
  <div class ="container">
    <div class ="row"> 
        <div class="col-md-6 ">   
              <div class="table-responsive">
                <table  id = "scores" class="table condensed" style="width:70%">  <!-- add proper styling -->
                   <div class="panel panel-info">
                            <div class="panel-heading">
                              <h1>Scores</h1>
                            </div>
                            <div class="panel-body">
                               <h2><small>See your last 2 scores below. Add a score by clicking 'new score', view and edit the details by clicking the buttons below.</small> <%= link_to 'New Score', new_score_path(:user_id => current_user.id), :class => "btn btn-info" %></h2>
                               
                              
                            </div>
                                  
                                   <thead>
                                        <tr>
                                          <th>Strokes:</th>
                                          <th>Created on:</th>
                                          <th colspan="3"></th>
                                        </tr>
                                  </thead>

                                        <tbody>
                                          <% @scores.each do |score| %>
                                            <tr>
                                              <td><%= score.strokes %></td>
                                              <td><%= score.created_at.strftime("%d %b. %Y")%></td>
                                              <td><%= link_to '  ', score, {:class => "btn btn-primary glyphicon glyphicon-eye-open" , 'data-toggle' => 'modal','data-target' =>'#myModal'}%></td> 
                                              <td><%= link_to '  ', score, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger glyphicon glyphicon-trash"%></td>
                                          
                                            </tr> 
                                          <% end %>
                                        </tbody>     
                </div>
                                 

                </table>
                 
              </div>
              
        </div>
       



<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        
      
      
    </div>
  </div>
</div>
</div>




        <div class ="col-md-6">                         
               <div class="panel panel-success">
                    <div class="panel-heading">
                    <h1>Stats <button class ="btn btn-success">View Stats</button></h1>
                    </div>
                    <div class="panel-body">
                           <h5 class = "lead">Click the button below to have your statistics generated.</h5>

                        <p>   
                          Scores:
                            <strong><%= @map %></strong>
  
                          </p>
                          <p>
                            Range:  
                            <% if @range == nil %>
                            0
                            <% else %>
                              <strong><%= @range.round %></strong> (Difference between best score and worst score)
                            <% end %>
                          </p>
                          <p>
                          Mean Value:
                            <% if @avg == nil %> 
                            0
                            <% else %>
                              <strong><%= @avg.round %></strong> (Sum total of all scores, divided by total number of scores)
                            <% end %>
                          </p>  
                          <p>
                          Median: 
                            <% if @median == nil %>
                            0
                            <% else %>
                              <strong><%= @median.round %></strong>
                            <% end %>
                            
                          </p>
                           <p>
                          Confidence Interval:
                          
                          </p>
                          <p>
                          Standard Deviation:
                            <% if @stDev == nil %>
                            0
                            <% else %>
                              <strong><%= @stDev.round %></strong>
                            <% end %>
                          </p>
                          <p>
                          Variance:  
                            <% if @variance == nil %>
                            0
                            <% else %>
                              <strong><%= @variance.round %></strong>
                            <% end %>
                            </p>
                            
                          
                          
                            
                    </div>
                </div>
                  
                <br>
          </div>            
        </div>
    </div>
  </div>
<br>



  
  <body>
    <div class ="container">
      <div class ="row"> 
        <div class="col-md-11">    
                 <div class="panel panel-primary">
                    <div class="panel-heading">
                      <h1> Graph </h1>
                    </div>  
                        <h5 class = "lead">  Here are your scores in a graph layout. </h5>
                        <%= content_tag :div, "", id: "scores_chart", data: {scores: @scores} %>
                        <div id="myfirstchart" style="height: 250px; width: 100%" ></div>
                  </div>       
             </div>
        </div>
    </div>
  </body>



 

