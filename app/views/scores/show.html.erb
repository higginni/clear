<div class="page-header">
  <center>
    <h2>Score Details</h2>
  </center>       <!--  -->
</div>
<div class = "container-fluid">
  <div class = "row">
      <div class = "well well">
          <p>
          <strong>Created:</strong>
            <%= @score.updated_at.strftime("%d %b. %Y") %>
          <p>
          <p>
          <strong>Last Updated:</strong>
            <%= @score.updated_at.strftime("%H:%M") %>
          <p>
            <strong>Strokes:</strong>
            <%= @score.strokes %>
          </p>

          <p>
            <strong>Course:</strong>
            <%= @score.course %>
          </p>
      </div>
  </div>
  <%= link_to 'Edit', edit_score_path(@score) %> |
  <%= link_to 'Back', scores_path %>

</div>

