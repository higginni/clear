
<!-- allows multiple scores to be inserted -->
<%= form_for @score, html: { multipart: true } do |f| %>
  <% if @score.errors.any? %>
  <!-- if scores are invalid, as the logic dictated by the model shows, the error message is shown in the views -->
    <div id="error_explanation">
      <div class="alert alert-danger" role="alert"><h4><%= pluralize(@score.errors.count, "error") %> prohibited this score from being saved:</h4></div>

      <ul>
      <% @score.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
      <div class ="row">
        <div class="col-md-2"></div> 
         <div class="col-md-8"> 
          
                <div class="field">
                  <%= f.number_field :strokes , :class => "form-control",required: true, :placeholder => "Score"%>
                </div>
              
                <div class="field">
                  <%= f.text_field :course, :class => "form-control",required: true, :placeholder => "Course" %>
                </div>

                
                <br>
                <div class="col-md-4">  
                 <div class="field"> 
                  <%= f.label :Upload_an_Image %><br>
                  <%= f.file_field :image %>  
                </div>
              </div>
              
                <br><br> 
              <div class="submit-field">
                  <%= f.submit "Enter Score", :class => "btn btn-block btn-primary"%>
                </div>

         </div> 
          

        
          
    </div>
<% end %>
